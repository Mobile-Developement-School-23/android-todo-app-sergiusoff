<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToDoApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/back_primary</item>
        <item name="colorPrimaryVariant">@color/back_elevated</item>
        <item name="colorOnPrimary">@color/label_primary</item>
        <item name="colorSecondary">@color/label_secondary</item>
        <!--        <item name="colorSecondaryVariant">@color/teal_200</item>-->
        <item name="colorOnSecondary">@color/label_secondary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
    </style>

    <style name="large_title" parent="H1">
        <item name="android:textColor">@color/label_primary</item>
    </style>

    <style name="title" parent="H2">
        <item name="android:textColor">@color/label_primary</item>
    </style>

    <style name="subhead" parent="H3">
        <item name="android:textColor">@color/label_tertiary</item>
    </style>

    <style name="body" parent="body_text">
        <item name="android:textColor">@color/label_primary</item>
    </style>

    <style name="body_is_done" parent="body_text">
        <item name="android:textColor">@color/label_tertiary</item>
    </style>

    <style name="button" parent="button_text">
        <item name="android:color">@color/blue</item>
    </style>

    <style name="FAB" parent="button">
        <item name="android:color">?attr/colorPrimaryVariant</item>
        <item name="android:backgroundTint">@color/blue</item>
    </style>
</resources>